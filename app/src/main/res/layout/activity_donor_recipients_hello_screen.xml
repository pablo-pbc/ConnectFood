<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".DonorRecipientsHelloScrActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/helloScreenLoggedUserLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_screen_user_logged_location"
                android:textColor="#F48C06"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_location_on_24"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry"
                android:contentDescription="@string/location_icon" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_screen_standard_saudation"
            android:textColor="#000"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="20dp"/>

        <ImageView
            android:id="@+id/helloScreenLoggedUserLogo"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/rest_one"
            android:paddingStart="10dp"
            android:contentDescription="@string/hello_screen_user_logged_logo"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/helloScreenLoggedUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_screen_user_logged_name"
            android:textColor="#000"
            android:textSize="24sp"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/helloScreenLoggedUserslogan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_screen_user_logged_slogan"
            android:textColor="#000"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/helloScreenStandarTileMessage"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_screen_standard_text"
            android:textColor="#F48C06"
            android:textSize="28sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/helloScreenStandarSubMessage"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/hello_screen_standard_text_two"
            android:textColor="#F48C06"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</ScrollView>