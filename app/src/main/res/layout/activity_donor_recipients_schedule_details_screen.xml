<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".DonorRecipientsScheduleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/scheduleDetailsLoggedUserLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rest_one"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/schedule_details_user_logged_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/scheduleDetailsLoggedUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/schedule_details_user_logged_logo"
                    android:textColor="#F48C06"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/scheduleDetailsLoggedUserLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_details_user_logged_location"
                        android:textColor="#F48C06"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_location_on_24"
                        android:paddingStart="10dp"
                        android:contentDescription="@string/location_icon"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/scheduleDetailsNoLoggedUserBanner"
            android:layout_width="match_parent"
            android:layout_height="176dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="@string/schedule_details_user_no_logged_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:id="@+id/scheduleDetailsNoLoggedUserName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/schedule_details_no_logged_user_name"
                android:textColor="#F48C06"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"/>

            <ImageView
                android:id="@+id/likeOrUnlikedIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/liked"
                android:contentDescription="@string/liked_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/scheduleDetailsNoLoggedUserDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule_details_no_logged_user_slogan"
            android:textColor="#F48C06"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="2dp"
            android:lineHeight="24dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/scheduleDetailsNoLoggedUserContactText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/schedule_details_no_logged_standard_text"
            android:textColor="#F48C06"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="2dp"
            android:lineHeight="24dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            tools:ignore="UnusedAttribute"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_adress"
                android:textColor="#F48C06"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="10dp"
                tools:ignore="UnusedAttribute" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/location_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/scheduleDetailsNoLoggedUserAdress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/schedule_details_no_logged_user_adress"
                        android:textColor="#F48C06"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_contact"
                    android:textColor="#F48C06"
                    android:textSize="16sp"
                    android:lineHeight="24dp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    tools:ignore="UnusedAttribute" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/whatsapp_circle"
                        android:contentDescription="@string/whatsapp_icon" />

                    <TextView
                        android:id="@+id/scheduleDetailsNoLoggedUserWhatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/schedule_details_no_logged_user_whatsapp"
                        android:textColor="#F48C06"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry,UnusedAttribute" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/telephone"
                        android:contentDescription="@string/telephone_icon" />

                    <TextView
                        android:id="@+id/scheduleDetailsNoLoggedUserTelephone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/schedule_details_no_logged_user_telephone"
                        android:textColor="#F48C06"
                        android:textSize="14sp"
                        android:lineHeight="24dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="10dp"
                        tools:ignore="RtlSymmetry,UnusedAttribute" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="50dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/label_data_coleta_entrega"
                android:textColor="#F48C06"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp" />


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textColorHint="@color/orangeConnectFood"
                android:hint="@string/hint_data">

                <com.santalu.maskara.widget.MaskEditText
                    android:id="@+id/scheduleDetailsDeliveryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:digits="0123456789"
                    app:mask="__/__/__"
                    app:maskCharacter="_"
                    android:singleLine="true"
                    android:textColor="@color/orangeConnectFood"/>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scheduleDetailsConfirmScheduleBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F48C06"
            android:text="@string/schedule_details_confirm_btn"
            android:fontFamily="@font/roboto_bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="12dp"/>

        <LinearLayout
            android:id="@+id/scheduleDetailsBackBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_arrow_back_24"
                android:layout_gravity="center"
                android:rotationY="180"
                android:contentDescription="@string/arrow_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn_voltar"
                android:textColor="#F48C06"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>