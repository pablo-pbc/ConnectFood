<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".DonorRecipientsFilterAllActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/filterAllLoggedUserLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/rest_one"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/filter_all_logged_user_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/filterAllLoggedUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_all_logged_user_name"
                    android:textColor="#F48C06"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/locationTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all_logged_user_location"
                        android:textColor="#F48C06"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"/>

                    <ImageView
                        android:id="@+id/imageLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_location_on_24"
                        android:paddingStart="10dp"
                        android:contentDescription="@string/location_icon"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterAllTypeList"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBB63"
                android:text="@string/filter_all_list_btn"
                android:fontFamily="@font/roboto_regular"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                android:layout_marginEnd="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterAllTypeGrid"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F48C06"
                android:text="@string/filter_all_grid_btn"
                android:fontFamily="@font/roboto_regular"
                android:textAllCaps="false"
                app:cornerRadius="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">

                <ImageView
                    android:id="@+id/filterLiked"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/not_liked"
                    android:layout_gravity="center|end"
                    android:contentDescription="@string/liked_icon"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/filterAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/label_filter_all"
                android:textColor="#F48C06"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/filterSchedule"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/label_filter_scheduled"
                android:textColor="#F48C06"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/filterFinished"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/label_filter_finished"
                android:textColor="#F48C06"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/filterAllGridUserBloco"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingHorizontal="0dp"
                    tools:ignore="UselessParent">


                    <ImageView
                        android:id="@+id/filterAllNoLoggedUserGridLogo"
                        android:layout_width="176dp"
                        android:layout_height="176dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/filter_all_logged_user_logo" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="10dp"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/filterAllNoLoggedUserGridName"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_all_no_logged_user_name"
                            android:textColor="#F48C06"
                            android:textSize="16sp"
                            android:fontFamily="@font/roboto_bold"/>

                        <ImageView
                            android:id="@+id/filterAllNoLoggedGridLikeIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/not_liked"
                            android:contentDescription="@string/liked_icon" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/filterAllNoLoggedUserGridSlogan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all_no_logged_user_slogan"
                        android:textColor="#F48C06"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="2dp"
                        android:layout_marginHorizontal="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/baseline_location_on_24"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/location_icon" />

                        <TextView
                            android:id="@+id/filterAllNoLoggedUserGridDistance"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_all_no_logged_user_distance"
                            android:textColor="#F48C06"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_regular"/>

                        <TextView
                            android:id="@+id/filterAllNoLoggedGridContactBtn"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_all_contact_btn"
                            android:textColor="#F48C06"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_bold"
                            android:textAlignment="textEnd"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/filterAllNoLoggedUserListBloco"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp">

                <ImageView
                    android:id="@+id/filterAllNoLoggedUserListLogo"
                    android:layout_width="match_parent"
                    android:layout_height="176dp"
                    android:contentDescription="@string/filter_all_no_logged_user_name" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/filterAllNoLoggedUserListName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all_no_logged_user_name"
                        android:textColor="#F48C06"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_bold"/>

                    <ImageView
                        android:id="@+id/filterAllNoLoggedUserListLikeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/not_liked"
                        android:contentDescription="@string/liked_icon" />

                </LinearLayout>

                <TextView
                    android:id="@+id/filterAllNoLoggedUserListSlogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/filter_all_no_logged_user_slogan"
                    android:textColor="#F48C06"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/location_icon" />

                    <TextView
                        android:id="@+id/filterAllNoLoggedUserListDistance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all_no_logged_user_distance"
                        android:textColor="#F48C06"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"/>

                    <TextView
                        android:id="@+id/listUserContact2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_all_contact_btn"
                        android:textColor="#F48C06"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_bold"
                        android:textAlignment="textEnd"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>